{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@features": ["src/features"],
      "@features/audio": ["src/features/audio"],
      "@features/checkbox": ["src/features/checkbox"],
      "@features/delete-button": ["src/features/delete-button"],
      "@features/empty-avatar": ["src/features/empty-avatar"],
      "@features/image-modal": ["src/features/image-modal"],
      "@features/lang": ["src/features/lang"],
      "@features/login": ["src/features/login"],
      "@features/logo": ["src/features/logo"],
      "@features/video": ["src/features/video"],
      "@features/confirm-popup": ["src/features/confirm-popup"],
      "@pages": ["src/pages"],
      "@pages/authorization": ["src/pages/authorization"],
      "@pages/main": ["src/pages/main"],
      "@pages/profile": ["src/pages/profile"],
      "@pages/registration": ["src/pages/registration"],
      "@pages/trusted-profile": ["src/pages/trusted-profile"],
      "@pages/video-page": ["src/pages/video-page"],
      "@shared": ["src/shared/index.ts"],
      "@shared/constants": ["src/shared/constants"],
      "@shared/directives": ["src/shared/directives"],
      "@shared/helpers": ["src/shared/helpers"],
      "@shared/interfaces": ["src/shared/interfaces"],
      "@shared/services": ["src/shared/services"],
      "@shared/tokens": ["src/shared/tokens"],
      "@widgets": ["src/widgets"],
      "@widgets/audio-block": ["src/widgets/audio-block"],
      "@widgets/footer": ["src/widgets/footer"],
      "@widgets/header": ["src/widgets/header"],
      "@widgets/notification-settings": ["src/widgets/notification-settings"],
      "@widgets/saved-media": ["src/widgets/saved-media"],
      "@widgets/trusted-people": ["src/widgets/trusted-people"],
      "@widgets/video-block": ["src/widgets/video-block"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
